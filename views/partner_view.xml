<odoo>
    <record id="view_partner_form_ai_final" model="ir.ui.view">
        <field name="name">res.partner.form.ai.final</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_analyze_profile" type="object" string="ğŸ” Analyser" class="oe_highlight"/>
                </header>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="ğŸ“Š Analyse IA">
                    <group>
                        <group string="RÃ©sultats">
                            <field name="ai_score" widget="percentpie"/>
                            <field name="ai_verdict" widget="badge"
                                   decoration-danger="ai_verdict == 'low'"
                                   decoration-warning="ai_verdict == 'medium'"
                                   decoration-success="ai_verdict == 'high'"/>
                            <field name="ai_experience_level" widget="badge"/>
                            <field name="ai_analysis_date"/>
                        </group>
                    </group>
                    <group string="DÃ©tails">
                        <field name="ai_detected_skills" readonly="1"/>
                        <field name="ai_missing_skills" readonly="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="view_partner_list_ai_final" model="ir.ui.view">
        <field name="name">res.partner.list.ai.final</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="ai_score" string="Score IA" optional="show"/>
                <field name="ai_verdict" widget="badge" optional="show"/>
            </xpath>
        </field>
    </record>
    
    </odoo>