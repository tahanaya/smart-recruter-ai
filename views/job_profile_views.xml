<odoo>
    <record id="view_job_profile_form" model="ir.ui.view">
        <field name="name">smart.recruiter.job.profile.form</field>
        <field name="model">smart.recruiter.job.profile</field>
        <field name="arch" type="xml">
            <form string="Profil de Poste">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Ex: Développeur Python Senior"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="active"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group>
                            <field name="min_score_threshold"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Description détaillée du profil de poste..."/>
                        </page>
                        <page string="Compétences Requises">
                            <field name="skill_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="skill_type"/>
                                    <field name="weight"/>
                                    <field name="is_critical" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_job_profile_tree" model="ir.ui.view">
        <field name="name">smart.recruiter.job.profile.list</field>
        <field name="model">smart.recruiter.job.profile</field>
        <field name="arch" type="xml">
            <list string="Profils de Poste">
                <field name="name"/>
                <field name="priority" widget="priority"/>
                <field name="min_score_threshold"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="view_job_profile_search" model="ir.ui.view">
        <field name="name">smart.recruiter.job.profile.search</field>
        <field name="model">smart.recruiter.job.profile</field>
        <field name="arch" type="xml">
            <search string="Rechercher Profils de Poste">
                <field name="name"/>
                <filter string="Archivé" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record id="action_job_profile" model="ir.actions.act_window">
        <field name="name">Profils de Poste</field>
        <field name="res_model">smart.recruiter.job.profile</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre premier profil de poste
            </p>
        </field>
    </record>

    <menuitem id="menu_smart_recruiter_root"
              name="Smart Recruiter AI"
              sequence="100"
              web_icon="smart_recruiter_ai,static/description/icon.png"/>

    <menuitem id="menu_smart_recruiter_config"
              name="Configuration"
              parent="menu_smart_recruiter_root"
              sequence="10"/>

    <menuitem id="menu_job_profile"
              name="Profils de Poste"
              parent="menu_smart_recruiter_config"
              action="action_job_profile"
              sequence="1"/>

</odoo>