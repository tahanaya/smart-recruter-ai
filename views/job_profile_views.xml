<odoo>
    <record id="view_job_profile_form_final" model="ir.ui.view">
        <field name="name">smart.recruiter.job.profile.form.final</field>
        <field name="model">smart.recruiter.job.profile</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Nom du poste..."/></h1>
                    </div>
                    <group>
                        <field name="active"/>
                        <field name="priority" widget="priority"/>
                        <field name="min_score_threshold"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="CompÃ©tences">
                            <field name="skill_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="weight"/>
                                    <field name="is_critical" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_job_profile_list_final" model="ir.ui.view">
        <field name="name">smart.recruiter.job.profile.list.final</field>
        <field name="model">smart.recruiter.job.profile</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="priority" widget="priority"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <record id="action_job_profile_final" model="ir.actions.act_window">
        <field name="name">Profils de Poste</field>
        <field name="res_model">smart.recruiter.job.profile</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_smart_root_final" name="Smart Recruiter" sequence="10"/>
    <menuitem id="menu_config_final" name="Configuration" parent="menu_smart_root_final"/>
    <menuitem id="menu_profiles_final" name="Profils" parent="menu_config_final" action="action_job_profile_final"/>
</odoo>